#include <iostream>
using namespace std;

double areaQuadrado(double A) {
    return A * A;
}

double areaTriangulo(double A, double B) {
    return (A * B) / 2;
}

double areaTrapezio(double A, double B, double C) {
    return (A + B) * C / 2;
}

int main() {
    double A, B, C;
    cin >> A >> B >> C;

    cout << fixed;
    cout.precision(4);

    cout << areaQuadrado(A) << endl;
    cout << areaTriangulo(A, B) << endl;
    cout << areaTrapezio(A, B, C) << endl;
}
