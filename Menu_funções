#include <iostream>
using namespace std;

void lerVetor(int v[], int n) {
    for (int i = 0; i < n; i++) {
        cin >> v[i];
    }
}

double media(int v[], int n) {
    double s = 0;
    for (int i = 0; i < n; i++) s += v[i];
    return s / n;
}

int maior(int v[], int n) {
    int M = v[0];
    for (int i = 1; i < n; i++) if (v[i] > M) M = v[i];
    return M;
}

int menor(int v[], int n) {
    int m = v[0];
    for (int i = 1; i < n; i++) if (v[i] < m) m = v[i];
    return m;
}

int contarPares(int v[], int n) {
    int c = 0;
    for (int i = 0; i < n; i++) if (v[i] % 2 == 0) c++;
    return c;
}

int main() {
    int n, op;
    int v[100];

    cin >> n;
    lerVetor(v, n);

    do {
        cin >> op;
        if (op == 1) cout << media(v, n) << endl;
        if (op == 2) cout << maior(v, n) << endl;
        if (op == 3) cout << menor(v, n) << endl;
        if (op == 4) cout << contarPares(v, n) << endl;
    } while (op != 5);
}
